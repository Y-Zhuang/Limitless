<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package extends="json-default" name="admin-default">
        <!--拦截器配置-->
        <interceptors>
            <interceptor name="loginCheck" class="com.zhuang.limitless.interceptor.AdminInterceptor"></interceptor>
            <interceptor-stack name="crudStack">
                <interceptor-ref name="defaultStack"></interceptor-ref>
                <interceptor-ref name="loginCheck"></interceptor-ref>
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="crudStack"></default-interceptor-ref>

        <!-- 全局配置 -->
        <global-results>
            <result name="login">/admin.jsp</result>
        </global-results>

    </package>
</struts>